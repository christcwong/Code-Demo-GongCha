@model IEnumerable<GongChaWebApplication.Models.Item>

@{
    ViewBag.Title = "Item List";
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}

<h2>@(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Create New Item", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChinName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageUnitId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolumeH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolumeW)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolumeL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrossWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CBM)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Serial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChinName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageUnit.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeW)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossWeight)
                    @Html.DisplayFor(modelItem => item.GrossWeightUnit.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CBM)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @*|
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

    </table>
</div>
