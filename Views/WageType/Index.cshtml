@model IEnumerable<GongChaWebApplication.Models.WageType>

@{
    ViewBag.Title = "Wage Type Profiles";
    Layout = "~/Views/Shared/_RosterLayout.cshtml";
}

<h2>@(ViewBag.Title)</h2>

<p>
    @Html.ActionLink("Create New Wage Type", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-stripped">
        <tr>
            <th>
                @Html.Label("Wage Type") @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.targetMultiplier)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="colorPickerHolder" data-value="@(item.Color)" style="background-color:@(item.Color)">@(item.Color)</div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.targetMultiplier)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }

    </table>
</div>
